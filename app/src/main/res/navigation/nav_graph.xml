<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.santisoft.patinajemobile.ui.main.DashboardFragment"
        android:label="Inicio">
        <action
            android:id="@+id/action_dashboard_to_patinadoras"
            app:destination="@id/patinadorasFragment" />
        <action
            android:id="@+id/action_dashboard_to_tomar_asistencia"
            app:destination="@id/tomarAsistenciaFragment" />
        <action
            android:id="@+id/action_dashboard_to_detalle"
            app:destination="@id/detalleTorneoFragment" />
    </fragment>

    <fragment
        android:id="@+id/patinadorasFragment"
        android:name="com.santisoft.patinajemobile.ui.patinadoras.PatinadorasFragment"
        android:label="Patinadoras">
        <action
            android:id="@+id/action_patinadoras_to_detalle"
            app:destination="@id/detallePatinadoraFragment" />
    </fragment>

    <fragment
        android:id="@+id/detallePatinadoraFragment"
        android:name="com.santisoft.patinajemobile.ui.patinadoras.DetallePatinadoraFragment"
        android:label="Detalle">
        <argument
            android:name="patinadorId"
            app:argType="integer" />

        <action
            android:id="@+id/action_detalle_to_agregar_evaluacion"
            app:destination="@id/agregarEvaluacionFragment" />
    </fragment>

    <fragment
        android:id="@+id/tomarAsistenciaFragment"
        android:name="com.santisoft.patinajemobile.ui.asistencias.TomarAsistenciaFragment"
        android:label="Tomar Asistencia" />

    <fragment
        android:id="@+id/torneosFragment"
        android:name="com.santisoft.patinajemobile.ui.main.TorneosFragment"
        android:label="Torneos">
        <action
            android:id="@+id/action_torneos_to_detalle"
            app:destination="@id/detalleTorneoFragment" />
    </fragment>

    <fragment
        android:id="@+id/deudoresFragment"
        android:name="com.santisoft.patinajemobile.ui.main.DeudoresFragment"
        android:label="Deudores" />

    <fragment
        android:id="@+id/agregarEvaluacionFragment"
        android:name="com.santisoft.patinajemobile.ui.evaluaciones.AgregarEvaluacionFragment"
        android:label="Nueva Evaluación">
        <argument
            android:name="patinadorId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/detalleTorneoFragment"
        android:name="com.santisoft.patinajemobile.ui.torneos.DetalleTorneoFragment"
        android:label="Detalle Torneo">
        <argument
            android:name="evento"
            app:argType="com.santisoft.patinajemobile.data.model.eventos.Evento" />
        <action
            android:id="@+id/action_detalleTorneo_to_seleccionAtletas"
            app:destination="@id/seleccionAtletasFragment" />
    </fragment>

    <fragment
        android:id="@+id/seleccionAtletasFragment"
        android:name="com.santisoft.patinajemobile.ui.torneos.SeleccionAtletasFragment"
        android:label="Selección Atletas"
        tools:layout="@layout/fragment_seleccion_atletas" />

</navigation>