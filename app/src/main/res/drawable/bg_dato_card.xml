<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fondo suave -->
    <solid android:color="@color/md_surface" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Sombra ligera con stroke -->
    <stroke android:width="1dp" android:color="@color/md_surface_variant" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>
