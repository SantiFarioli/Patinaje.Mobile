<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:strokeColor="#FFCDD2"
        app:strokeWidth="1dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTituloEstado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado de Cuenta"
                android:textSize="14sp"
                android:textColor="#757575"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvEstadoGeneral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEUDA PENDIENTE"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_marginStart="8dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvTituloEstado"
                app:layout_constraintStart_toEndOf="@+id/tvTituloEstado"/>

            <TextView
                android:id="@+id/tvTotalDeuda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15.000"
                android:textSize="48sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTituloEstado"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvProximoVencimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vence: 10/10"
                android:textSize="14sp"
                android:textColor="#616161"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/tvTotalDeuda"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerPagos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cardHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_pago"/>

</androidx.constraintlayout.widget.ConstraintLayout>
