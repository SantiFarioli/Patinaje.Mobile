<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_surface_variant">

    <!-- ===== HEADER ===== -->
    <com.google.android.material.card.MaterialCardView
        style="@style/Widget.Patinaje.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_16"
        android:padding="@dimen/space_16">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Foto circular -->
            <ImageView
                android:id="@+id/imgFoto"
                android:layout_width="159dp"
                android:layout_height="148dp"
                android:background="@drawable/bg_circle"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person" />

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                style="@style/Text.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center" />

            <!-- Categoría + Estado -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8"
                android:gravity="center">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCategoria"
                    style="@style/Chip.Success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categoría B" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEstado"
                    style="@style/Chip.Success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_8"
                    android:text="Activa" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ===== TABS ===== -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/md_primary"
        app:tabSelectedTextColor="@color/md_primary"
        app:tabTextColor="@color/md_on_surface_variant" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
