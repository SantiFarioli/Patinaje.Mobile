<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="0dp">

    <!-- Columna Izquierda (Timeline) -->
    <ImageView
        android:id="@+id/ivStatusIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check_circle"
        app:tint="#4CAF50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvConcepto"/>

    <View
        android:id="@+id/viewConnectorLine"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:background="#E0E0E0"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/ivStatusIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ivStatusIcon"
        app:layout_constraintEnd_toEndOf="@+id/ivStatusIcon"/>

    <!-- Columna Central (Datos) -->
    <TextView
        android:id="@+id/tvConcepto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Septiembre 2025"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivStatusIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvMonto"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/tvDetalle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pagado el 12/09"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvConcepto"
        app:layout_constraintStart_toStartOf="@+id/tvConcepto"
        app:layout_constraintEnd_toEndOf="@+id/tvConcepto"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Columna Derecha (Monto) -->
    <TextView
        android:id="@+id/tvMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$15.000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvConcepto"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvConcepto" />

</androidx.constraintlayout.widget.ConstraintLayout>