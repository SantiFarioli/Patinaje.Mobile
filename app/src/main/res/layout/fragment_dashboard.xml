<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingBottom="88dp">

        <!-- Header / Saludo -->
        <TextView
            android:id="@+id/lblHola"
            android:text="Hola, Profe 游녦"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lblSub"
            android:text="Gesti칩n de Patinaje Art칤stico"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lblHola"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- M칠tricas R치pidas -->
        <LinearLayout
            android:id="@+id/containerMetrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/lblSub">

            <!-- Card Patinadoras -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPatCount"
                style="@style/Widget.Material3.CardView.Filled"
                app:cardBackgroundColor="@color/bg_item_purple"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCountPatinadoras"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Atletas Activas"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card Eventos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEventos"
                style="@style/Widget.Material3.CardView.Filled"
                app:cardBackgroundColor="@color/bg_item_blue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvCountEventos"
                        android:text="0"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="Pr칩x. Eventos"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Acciones R치pidas (Grid 2x2) -->
        <TextView
            android:id="@+id/lblAcciones"
            android:text="Acciones R치pidas"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerMetrics"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridQuick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:rowCount="2"
            app:columnCount="2"
            app:alignmentMode="alignMargins"
            app:columnOrderPreserved="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/lblAcciones">

            <!-- Card 1: Patinadoras -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPatinadoras"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_patin"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:tint="@color/md_primary"/>
                    <TextView
                        android:text="Atletas"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 2: Torneos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTorneos"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_trophy"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:tint="@color/md_secondary"/>
                    <TextView
                        android:text="Torneos"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 3: Pagos -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPagos"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_cash"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:tint="@color/bg_item_green"/>
                    <TextView
                        android:text="Pagos"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card 4: Asistencias -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAsistencias"
                style="@style/Widget.Material3.CardView.Elevated"
                app:cardElevation="2dp"
                app:cardCornerRadius="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1"
                android:layout_margin="6dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/ic_calendar"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:tint="@color/error"/>
                    <TextView
                        android:text="Asistencias"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.gridlayout.widget.GridLayout>

        <!-- Pr칩ximos Eventos -->
        <TextView
            android:id="@+id/lblProximos"
            android:text="Pr칩ximos Eventos"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/gridQuick"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tvVerTodo"
            android:text="Ver todo"
            android:textSize="14sp"
            android:textColor="@color/md_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBaseline_toBaselineOf="@id/lblProximos"
            app:layout_constraintEnd_toEndOf="parent"
            android:clickable="true"
            android:focusable="true"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerEventos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/lblProximos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"/>
            
        <TextView
            android:id="@+id/lblNoEventos"
            android:text="@string/sin_eventos"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lblProximos"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/lblProximos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>