<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ===== DATOS DE LA PATINADORA ===== -->
        <TextView
            android:text="Datos de la patinadora"
            style="@style/Text.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <!-- Contenedor dinámico de cards -->
        <LinearLayout
            android:id="@+id/containerDatos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"/>

        <!-- ===== TUTORES ===== -->
        <TextView
            android:text="Tutor responsable"
            style="@style/Text.Subtitle"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

        <!-- Contenedor dinámico para cards de tutores -->
        <LinearLayout
            android:id="@+id/containerTutores"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>

        <!-- Botón Volver -->
        <Button
            android:id="@+id/btnVolver"
            style="@style/Button.Primary"
            android:text="Volver"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
