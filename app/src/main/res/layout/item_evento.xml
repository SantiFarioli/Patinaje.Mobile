<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp">

        <!-- Imagen a la izquierda (Compacta) -->
        <ImageView
            android:id="@+id/ivLugar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Imagen del torneo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- TÃ­tulo -->
            <TextView
                android:id="@+id/tvTitulo"
                android:text="Torneo Nacional 2024"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Fecha y Lugar -->
            <TextView
                android:id="@+id/tvSubtitulo"
                android:text="ðŸ“… 12/05/2024 â€¢ ðŸ“ Club Central"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Aviso Delegada (Placeholder) -->
            <LinearLayout
                android:id="@+id/layDelegadaNotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_rounded_item"
                android:backgroundTint="#FFF3E0"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="8dp"
                android:visibility="gone">
                <TextView
                    android:text="ðŸ“¢ Info Delegada"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="#E65100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Deadline -->
            <TextView
                android:id="@+id/tvDeadline"
                android:text="âš ï¸ Cierra inscripciones maÃ±ana"
                android:textSize="11sp"
                android:textColor="@color/error"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Flecha ir -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_right"
            app:tint="@color/gray"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

