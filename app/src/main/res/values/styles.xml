<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estado vacío -->
    <style name="EmptyState.Text">
        <item name="android:textColor">@color/md_on_surface_variant</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Divider para Recycler -->
    <style name="Recycler.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/md_surface_variant</item>
    </style>

    <style name="Widget.Patinaje.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_outline</item>
        <item name="hintTextColor">@color/md_on_surface_variant</item>
    </style>

    <!-- Genérico para errores -->
    <style name="EmptyState">
        <item name="android:textColor">@color/md_on_surface_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Recycler">
        <item name="android:divider">@color/md_surface_variant</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_on_surface</item>
    </style>
    <style name="Text.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/md_grey_600</item>
    </style>

    <style name="ItemDatoCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/bg_asistencia_card</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ItemDatoEmoji">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="ItemDatoTexto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ItemTutorCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/bg_dato_card</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ItemTutorTexto">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/md_on_surface</item>
    </style>



</resources>
